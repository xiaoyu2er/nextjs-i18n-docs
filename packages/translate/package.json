{
  "name": "@next-i18n/translate",
  "version": "1.0.0",
  "description": "Translate nextjs documentation",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "translate-docs": "dist/index.js"
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --apply .",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@semantic-release/git": "^10.0.1",
    "@types/commander": "^2.12.5",
    "@types/glob": "^8.1.0",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.15.30",
    "@vitest/coverage-v8": "^3.2.2",
    "c8": "^10.1.3",
    "semantic-release": "^24.2.5",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.2"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "cosmiconfig": "^9.0.0",
    "glob": "^11.0.2",
    "gray-matter": "^4.0.3",
    "micromatch": "^4.0.8",
    "openai": "^5.1.1"
  },
  "publishConfig": {
    "access": "public"
  }
