{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ESNext",
    "lib": ["ES2024"],
    "moduleResolution": "bundler",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "js/batch.js",
    "js/get-config.js",
    "js/index.js",
    "js/main.js",
    "js/openai.js",
    "js/ref-docs.js",
    "js/utils.js"
  ],
  "exclude": ["node_modules", "dist"]
}
